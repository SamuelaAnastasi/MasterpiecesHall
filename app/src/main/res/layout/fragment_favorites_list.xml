<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="com.example.android.masterpieceCp7.ui.main.FavoritesFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccentDark"
    android:paddingStart="@dimen/favs_container_padding"
    android:paddingEnd="@dimen/favs_container_padding"
    android:paddingTop="@dimen/favs_container_padding_vertical"
    android:paddingBottom="@dimen/favs_container_padding_vertical"
    tools:context="com.example.android.masterpieceshall.ui.main.FavoritesFragment">

    <include
        layout="@layout/no_favorites"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/favoritesList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/fragment_favorites" />

</FrameLayout>

